<?xml version="1.0" encoding="UTF-8" ?>
<Configuration>
    <Appenders>
        <Console name="Console">
            <PatternLayout
                    pattern="[%d{yyyy-MM-dd HH:mm:ss}] %p [%t] %l - %m%n">
            </PatternLayout>
        </Console>
        <File name="File" fileName="target/logs/github-automation.log">
            <PatternLayout
                    pattern="[%d{yyyy-MM-dd HH:mm:ss}] %p [%t] %l - %m%n">
            </PatternLayout>
        </File>>
    </Appenders>
    <Loggers>
        <Root level="trace">
            <AppenderRef ref="Console"/>
            <AppenderRef ref="File"/>
        </Root>
    </Loggers>
</Configuration>